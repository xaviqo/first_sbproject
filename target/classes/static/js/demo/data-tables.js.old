async function deletePersona(id){

  if (confirm(`Quieres eliminar el cliente ${id}?`)){

    await $.ajax({

      type: "DELETE",
      url: `api/personas/${id}`,
      contentType: 'application/json',
      headers: {
        "Accepts": "text/plain"
      }
    });

    location.reload();

  }

}

